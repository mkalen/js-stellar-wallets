{
  "extends": "@stellar/tsconfig",
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist",
    "importHelpers": false,
    "target": "es5",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "dist",
    "src/browser.ts",
    "playground/src/@stellar",
    "documentation/src/docs.json",
    "src/fixtures"
  ],
  "typedocOptions": {
    "out": "docs",
    "mode": "modules",
    "exclude": ["**/*.test.ts", "**/node_modules/**"],
    "excludePrivate": true,
    "includeDeclarations": true,
    "json": "dist/docs.json"
  }
}
